{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Odoo: Just My Code",
      "type": "debugpy",
      "request": "launch",
      "stopOnEntry": false,
      "python": "/usr/bin/python3",
      "program": "/usr/bin/odoo",
      "args": [
        "--config=/etc/odoo/odoo.conf",
        "--dev=xml,qweb"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Odoo: Full Debug",
      "type": "debugpy",
      "request": "launch",
      "stopOnEntry": false,
      "python": "/usr/bin/python3",
      "program": "/usr/bin/odoo",
      "args": [
        "--config=/etc/odoo/odoo.conf",
        "--dev=xml,qweb"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
